<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <package name="userPackage" namespace="/user" extends="basePackage">




        <action name="login" class="com.kaishengit.action.UserAction">
            <result>/WEB-INF/views/user/login.jsp</result>
        </action>

        <action name="lg" class="com.kaishengit.action.UserAction" method="login">
            <result name="success" type="redirectAction">
                <param name="actionName">home</param>
                <param name="namespace">/book</param>
            </result>
            <result name="error" type="redirectAction">
                <param name="actionName">login</param>
                <param name="state">1001</param>
            </result>
        </action>



    </package>


</struts>