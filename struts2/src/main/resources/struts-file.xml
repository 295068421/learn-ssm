<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <package name="filePackage" namespace="/file" extends="struts-default">

        <action name="upload" class="com.kaishengit.action.FileUploadAction">
            <result>/WEB-INF/views/file/upload.jsp</result>
        </action>

        <action name="save" class="com.kaishengit.action.FileUploadAction" method="save">
            <result type="redirectAction">
                <param name="actionName">upload</param>
            </result>
        </action>

        <action name="download" class="com.kaishengit.action.DownloadAction" method="execute">
            <result name="success" type="stream">
                <param name="contentType">application/octet-stream</param>
                <param name="contentLength">${size}</param>
                <param name="contentDisposition">attachment;filename="${name}"</param>
                <param name="inputName">fileInputStream</param>
                <param name="bufferSize">1024</param>
                <param name="allowCaching">true</param>
            </result>
        </action>


    </package>

</struts>